# docker compose .env template

# LiteLLM variables
BUTTERCUP_LITELLM_KEY=sk-1234

# LLM API Keys - You only need to set variables for APIs you will use.
OPENAI_API_KEY=<INSERT_KEY>
ANTHROPIC_API_KEY=<INSERT_KEY>

# === Optional Cloud Services (disabled by default) ===

# Azure OpenAI (optional - leave commented out for offline mode)
# AZURE_API_BASE=<INSERT_HOST>
# AZURE_API_KEY=<INSERT_KEY>

# LangFuse telemetry (optional - leave commented out for offline mode)
# LANGFUSE_HOST=<INSERT_HOST>
# LANGFUSE_PUBLIC_KEY=<INSERT_KEY>
# LANGFUSE_SECRET_KEY=<INSERT_KEY>

# OpenTelemetry (optional - leave commented out for offline mode)
# OTEL_EXPORTER_OTLP_ENDPOINT=<INSERT_ENDPOINT>
# OTEL_EXPORTER_OTLP_HEADERS=<INSERT_HEADERS>
# OTEL_EXPORTER_OTLP_PROTOCOL=grpc

# Scantron/Competition-API GitHub PAT (optional for local testing)
# SCANTRON_GITHUB_PAT=<INSERT_PAT>
